# Main switch for debug mode
# Default: true
DEBUG_MODE_ENABLED=true

# Limit the number of requests per provider
# Default: 2
DEBUG_MODE_REQUEST_LIMIT=2

# Enable or disable providers, comma-separated
# Options: "homegate,comparis,weegee,tutti.ch,meinwgzimmer,wgzimmer.ch"
# Default: "weegee,tutti.ch,wgzimmer.ch"
DEBUG_MODE_ENABLED_PROVIDERS="weegee,tutti.ch,wgzimmer.ch"

# Whether to query public transport
# Default: false
DEBUG_MODE_QUERY_PUBLIC_TRANSPORT=false

# --- Email Notification Settings ---

# This section configures the email alerts for new properties.
# You can use Gmail or a generic SMTP server.

# --- Option 1: Gmail (Recommended for ease of use) ---
# 1. Make sure you have a Gmail account.
# 2. If you use 2-Step Verification, create an "App Password" for this application.
#    See: https://support.google.com/accounts/answer/185833
# 3. Fill in the details below.

EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-gmail-app-password"
EMAIL_FROM="Swiss Property Finder <your-email@gmail.com>"
EMAIL_TO="recipient-email@example.com"


# --- Option 2: Generic SMTP Server ---
# Uncomment and use these settings if you are not using Gmail.

# EMAIL_SERVICE="generic"
# EMAIL_HOST="smtp.your-provider.com"
# EMAIL_PORT=587
# EMAIL_SECURE=false # Use true for port 465 (SSL), false for 587 (TLS)
# EMAIL_USER="your-smtp-username"
# EMAIL_PASS="your-smtp-password"
# EMAIL_FROM="Display Name <your-email@your-provider.com>"
# EMAIL_TO="recipient-email@example.com"


# --- Scheduling ---

# Comma-separated times to send email notifications (24h format, HH:mm)
# Default: "12:00,18:00"
EMAIL_SCHEDULE_TIMES="12:00,18:00"

# Timezone for the email schedule (e.g., "America/New_York", "UTC")
# Find yours here: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# Default: "Europe/Zurich"
EMAIL_SCHEDULE_TIMEZONE="Europe/Zurich"


# --- Email Debugging ---

# Set to true to run an email check immediately on server startup.
# Useful for testing your email configuration without waiting for the schedule.
# Default: false
DEBUG_EMAIL_IMMEDIATE_CHECK=false

# If the immediate check is enabled, this defines how many hours to look back for properties.
# For example, 24 would find all properties from the last day.
# Default: 24
DEBUG_EMAIL_LOOKBACK_HOURS=24
